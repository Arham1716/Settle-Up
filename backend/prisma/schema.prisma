model User {
  id        String   @id @default(uuid())
  name      String?
  email     String   @unique
  password  String
  fcmToken  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  emailVerified Boolean @default(false)
  provider      String?
  providerId    String?

  groupsCreated    Group[]       @relation("GroupCreator")
  groupMemberships GroupMember[]

  // New back-relation for notifications
  memberNotifications GroupMemberNotification[]

  // Expenses paid by this user
  expensesPaid Expense[]

  // Balance splits assigned to this user
  balanceSplits BalanceSplit[]

  // Activity relations
  activitiesPerformed Activity[] @relation("ActivityActor")
  activitiesReceived  Activity[] @relation("ActivityRecipient")
}

model Group {
  id          String    @id @default(uuid())
  name        String
  description String?
  currency    String    @default("USD")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  members     GroupMember[]
  createdById String
  createdBy   User          @relation("GroupCreator", fields: [createdById], references: [id])

  // New back-relations for invites and notifications
  invites             GroupInvite[]
  memberNotifications GroupMemberNotification[]
  expenses            Expense[]
  balanceSplits       BalanceSplit[]

  // Activity relation 
  activities Activity[]
}

model GroupMember {
  id          String    @id @default(uuid())
  role        GroupRole @default(MEMBER)
  joinedAt    DateTime  @default(now())
  leftAt      DateTime? // Soft delete for membership
  displayName String? // Name shown in the group

  userId  String
  user    User   @relation(fields: [userId], references: [id])
  groupId String
  group   Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

enum GroupRole {
  ADMIN
  MEMBER
}

// For new members invite via email

model GroupInvite {
  id        String       @id @default(uuid())
  groupId   String
  email     String
  token     String       @unique
  status    InviteStatus @default(PENDING)
  createdAt DateTime     @default(now())
  expiresAt DateTime     @default(dbgenerated("now() + interval '7 days'"))

  group Group @relation(fields: [groupId], references: [id])
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
}

// For current users group invite via the app notification

model GroupMemberNotification {
  id        String             @id @default(uuid())
  groupId   String
  userId    String
  status    NotificationStatus @default(PENDING)
  createdAt DateTime           @default(now())

  group Group @relation(fields: [groupId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@unique([groupId, userId])
}

enum NotificationStatus {
  PENDING
  ACCEPTED
  DECLINED
}

// Expenses for groups
model Expense {
  id          String   @id @default(uuid())
  description String
  amount      Decimal  @db.Decimal(10, 2)
  currency    String   @default("USD")
  paidById    String
  paidBy      User     @relation(fields: [paidById], references: [id])
  groupId     String
  group       Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([groupId])
  @@index([paidById])
}

// Balance splits for groups
model BalanceSplit {
  id        String   @id @default(uuid())
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  amount    Decimal  @db.Decimal(10, 2) // Amount this user should pay (positive) or is owed (negative)
  currency  String   @default("USD")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([groupId, userId]) // One split per user per group
  @@index([groupId])
  @@index([userId])
}

model Activity {
  id String @id @default(uuid())

  actorId String // who performed the action
  userId  String // who should see this activity
  groupId String?

  type     ActivityType
  title    String // headline shown in UI
  metadata Json? // expandable details (later)

  createdAt DateTime @default(now())

  actor User   @relation("ActivityActor", fields: [actorId], references: [id])
  user  User   @relation("ActivityRecipient", fields: [userId], references: [id])
  group Group? @relation(fields: [groupId], references: [id])

  @@index([userId])
  @@index([groupId])
  @@index([createdAt])
}

enum ActivityType {
  GROUP_CREATED
  GROUP_JOINED
  GROUP_DELETED
  MEMBER_ADDED
  MEMBER_INVITED
  MEMBER_REMOVED
  MEMBER_LEFT
  EXPENSE_ADDED
  EXPENSE_UPDATED
  EXPENSE_DELETED
  ADMIN_TRANSFERRED
}

model DeviceToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  platform  String   // "web", "android", "ios"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
